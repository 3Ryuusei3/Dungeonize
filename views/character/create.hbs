<div class="container my-5">

	<div class="row justify-content-center">

		<div class="col-md-6">

			<h1 class="my-5">New character</h1>

			<form action="/characters/create" method="POST" enctype="multipart/form-data">

				<div class="mb-3 row">
					<div class="col">
						<label for="charactername" class="form-label">Character name</label>
						<input type="text" class="form-control" id="charactername" name="charactername"
							placeholder="Thunderer the sorcerer" />
						<div class="form-text">Required.</div>
					</div>

				</div>
				<div class="mb-3 col">
					<label for="classes" class="form-label">Class</label>
					<select id="classes" class="form-select" aria-label="Default select example" name="classes">
						<option selected>Select a class</option>
						{{#each allClasses}}
						<option value="{{name}}">{{name}}</option>
						{{/each}}
					</select>
				</div>

				<div class="mb-3 col">
					<label for="race" class="form-label">Race</label>
					<select id="race" class="form-select" aria-label="Default select example" name="race">
						<option selected>Select a race</option>
						{{#each allRaces}}
						<option value="{{name}}">{{name}}</option>
						{{/each}}
					</select>
				</div>
				<div class="mb-3">
					<label for="imageUrl" class="form-label">Imagen</label>
					<input type="file" class="form-control" id="imageUrl" name="imageField" />
					<div class="form-text">Select your image for your character.</div>
				</div>
				<div class="mt-5 d-grid gap-2">
					<button type="submit" class="btn btn-dark block">Next step</button>
				</div>
			</form>
		</div>
	</div>

</div>