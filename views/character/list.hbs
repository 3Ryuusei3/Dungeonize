<div class="container mt-5">
	<h2 class="my-4">My characters</h2>
	<div class="row d-flex justify-content-center gap-4">
		{{#each characters}}
			<div class="card justify-content-between col-lg-3 col-md-4 p-3 gap-2" style="width: 18rem;">
				<img class="movie-img card-img-top" src="{{imageUrl}}" alt="Character picture" />
				<div>
					<h1 class="card-title mt-2 mb-5">{{charactername}}</h1>
					{{!-- <p><em>{{plot}}</em></p> --}}
					<p class="text-end class">{{classes}}</p>
					<p class="text-end race">{{race}}</p>

				</div>
				<a class="justify-self-end btn btn-secondary mb-2" href="/user/character/edit/{{_id}}">Edit</a>
				<form action="/user/character/delete/{{_id}}" method="POST" class="btn btn-danger">
					<input type="submit" value="Delete" class="btn btn-danger p-0" />
				</form>
			</div>
		{{/each}}
	</div>
	<a href="/characters/create" class="btn btn-success mt-4">Create new character</a>
</div>