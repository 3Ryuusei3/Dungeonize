<div class="container my-5">

	<div class="row justify-content-center">

		<div class="col-md-6">

			<h1 class="my-5">Signup</h1>

			<form action="/signup" method="POST" enctype="multipart/form-data">

				<div class="mb-3 row">
					<div class="col">
						<label for="emailInput" class="form-label">Email</label>
						<input type="email" class="form-control" id="emailInput" name="email"
							placeholder="john@dungeonize.com" />
						<div class="form-text">Required.</div>
					</div>
					<div class="col">
						<label for="password" class="form-label">Password</label>
						<input type="password" class="form-control" id="password" name="password"
							placeholder="SecretPopino" />
						<div class="form-text">Required.</div>
					</div>
				</div>

				<div class="mb-3">
					<label for="usernameInput" class="form-label">Username</label>
					<input type="text" class="form-control" id="usernameInput" name="username"
						placeholder="Dungeonizer123" />
				</div>
				<div class="mb-3">
					<label for="description" class="form-label">Description</label>
					<textarea rows="5" class="form-control" id="description" name="description"
						placeholder="Description max. 1000 characters"></textarea>
				</div>
				<div class="mb-3">
					<label for="imageUrl" class="form-label">Imagen</label>
					<input type="file" class="form-control" id="imageUrl" name="imageField" />
					<div class="form-text">Introduce la URL a la imagen que desees de perfil.</div>
				</div>
				<div class="mt-5 d-grid gap-2">
					<button type="submit" class="btn btn-dark block">Register</button>
				</div>

				{{#if errorMessage}}
				<div id="errorMessage">
					<p>{{errorMessage}}</p>
				</div>
				{{/if}}

			</form>
		</div>
	</div>

</div>